{
	"compilerOptions": {
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"target": "es6",
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"include": [ "src" ],
	"exclude": [ "node_modules", ".vscode-test" ]
}