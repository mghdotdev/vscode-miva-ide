{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": false,
		"target": "es6",
		"moduleResolution": "node"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{
			"path": "./client"
		},
		{
			"path": "./server"
		}
	]
}