{
    "name": "vscode-miva-ide",
    "displayName": "Miva IDE",
    "description": "Syntax highlighting, snippets and tools for building websites with Miva.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "scripts": {
        "build-syntax": "node ./syntaxes/build.js",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "main": "./client/MVT/out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Miva IDE",
            "properties": {
                "MVT.showWarningOnToolkitUsage": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show a warning when the 'toolkit' item is referenced within the template."
                },
                "MVT.showWarningOnToolbeltUsage": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show a warning when the 'toolbelt' item is referenced within the template."
                }
            }
        },
        "snippets": [
            {
                "language": "mvt",
                "path": "./snippets/MVT/tags.snippets.json"
            },
            {
                "language": "mvt",
                "path": "./snippets/MVT/customfields.snippets.json"
            },
            {
                "language": "mvt",
                "path": "./snippets/MVT/debugging.snippets.json"
            },
            {
                "language": "mvt",
                "path": "./snippets/MVT/builtins.snippets.json"
            }
        ],
        "languages": [
            {
                "id": "mvt",
                "aliases": [
                    "Miva Template Language (MVT)",
                    "mvt"
                ],
                "extensions": [
                    ".mvt"
                ],
                "configuration": "./configurations/mvt.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mvt",
                "scopeName": "text.html.mvt",
                "path": "./syntaxes/mvt.tmLanguage.json"
            },
            {
                "scopeName": "mvt.injection",
                "injectTo": [
                    "text.html.mvt"
                ],
                "path": "./syntaxes/mvt.injection.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:mvt"
    ],
    "devDependencies": {
        "@types/node": "^12.12.17",
        "glob": "^7.1.6",
        "js-yaml": "^3.13.1",
        "typescript": "^3.7.3"
    },
    "dependencies": {
        "@types/vscode": "^1.41.0"
    }
}
