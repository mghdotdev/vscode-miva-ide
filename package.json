{
    "name": "vscode-miva-ide",
    "displayName": "Miva IDE",
    "description": "Syntax highlighting, snippets and tools for building websites with Miva.",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "scripts": {
        "build-syntax": "node ./syntaxes/build.js",
        "watch-syntax": "node ./syntaxes/watch.js",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mghweb/vscode-miva-ide.git"
    },
    "publisher": "mhegler",
    "main": "./client/out/mvtMain.js",
    "contributes": {
        "configuration": {
            "title": "Miva IDE",
            "properties": {
                "MVT.lint.showWarningOnToolkitUsage": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show a warning when the 'toolkit' item is referenced within the template."
                },
                "MVT.lint.showWarningOnToolbeltUsage": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show a warning when the 'toolbelt' item is referenced within the template."
                },
                "MVT.lint.showWarningForUnencodedEntities": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show a warning when unencoded entities are referenced within the file."
                }
            }
        },
        "snippets": [
            {
                "language": "mvt",
                "path": "./snippets/MVT/tags.snippets.json"
            },
            {
                "language": "mvt",
                "path": "./snippets/MVT/customfields.snippets.json"
            },
            {
                "language": "mvt",
                "path": "./snippets/MVT/debugging.snippets.json"
            },
            {
                "language": "mvt",
                "path": "./snippets/MVT/builtins.snippets.json"
            }
        ],
        "languages": [
            {
                "id": "mvt",
                "aliases": [
                    "Miva Template Language (MVT)",
                    "mvt"
                ],
                "extensions": [
                    ".mvt"
                ],
                "configuration": "./configurations/mvt.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mvt",
                "scopeName": "text.html.mvt",
                "path": "./syntaxes/mvt.tmLanguage.json"
            },
            {
                "scopeName": "mvt.injection",
                "injectTo": [
                    "text.html.mvt"
                ],
                "path": "./syntaxes/mvt.injection.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:mvt"
    ],
    "devDependencies": {
        "@types/node": "^13.1.1",
        "chalk": "^3.0.0",
        "glob": "^7.1.6",
        "js-yaml": "^3.13.1",
        "typescript": "^3.7.4",
        "vsce": "^1.71.0"
    },
    "dependencies": {
        "vscode-uri": "^2.1.1"
    }
}
